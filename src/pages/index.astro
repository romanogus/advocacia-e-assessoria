---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/paloma-hero.jpg';
import { sanityClient } from 'sanity:client';

const areas = await sanityClient.fetch(
  `*[_type == "areaDeAtuacao"] | order(order asc) {
    _id,
    title,
    description,
    icon,
    order
  }`
);
---

<Layout>
	<section class="min-h-[calc(85vh-4rem)] bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center relative overflow-hidden">
		<!-- Background scales of justice (hidden on mobile) -->
		<svg class="hidden md:block absolute right-[385px] top-1/2 -translate-y-1/2 w-[700px] h-[700px] opacity-10" viewBox="0 0 64 64" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" xmlns="http://www.w3.org/2000/svg">
			<!-- Top circle -->
			<circle cx="32" cy="8" r="4"/>
			<!-- Vertical post -->
			<line x1="32" y1="12" x2="32" y2="52"/>
			<!-- Horizontal beam -->
			<line x1="8" y1="18" x2="56" y2="18"/>
			<!-- Left chain -->
			<line x1="12" y1="18" x2="12" y2="28"/>
			<!-- Right chain -->
			<line x1="52" y1="18" x2="52" y2="28"/>
			<!-- Left pan -->
			<path d="M4 28 L12 28 L20 28 L18 36 Q12 40 6 36 L4 28"/>
			<!-- Right pan -->
			<path d="M44 28 L52 28 L60 28 L58 36 Q52 40 46 36 L44 28"/>
			<!-- Base -->
			<path d="M24 52 L40 52 L42 56 L22 56 L24 52"/>
			<line x1="20" y1="56" x2="44" y2="56"/>
		</svg>
		<div class="absolute bottom-0 left-0 right-0 h-4 bg-gradient-to-r from-amber-700 to-amber-500"></div>
		<div class="max-w-7xl mx-auto px-4 md:px-8 py-12 md:py-16 w-full">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
				<!-- Left side - Text content -->
				<div class="space-y-6 text-center lg:text-left order-2 lg:order-1">
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">
						Paloma Santos
					</h1>
					<p class="text-xl text-slate-300">
						Advocacia e Assessoria Jurídica
					</p>
					<div class="flex flex-wrap justify-center lg:justify-start gap-4 pt-4">
						<a href="/blog" class="px-6 py-3 bg-white text-slate-900 font-medium rounded-lg hover:bg-slate-100 transition-colors">
							Ver Artigos
						</a>
						<a href="#contato" class="px-6 py-3 border-2 border-white text-white font-medium rounded-lg hover:bg-white hover:text-slate-900 transition-colors">
							Contato
						</a>
					</div>
				</div>

				<!-- Right side - Photo -->
				<div class="flex justify-center lg:justify-end order-1 lg:order-2">
					<div class="w-72 h-72 lg:w-96 lg:h-96 rounded-full overflow-hidden shadow-2xl border-4 border-white/20">
						<Image 
							src={heroImage} 
							alt="Paloma Santos - Advogada"
							width={600}
							height={600}
							class="w-full h-full object-cover object-[60%_0%] scale-110"
							loading="eager"
							quality={100}
						/>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Áreas de Atuação Section -->
	<section id="areas" class="py-20 bg-slate-700">
		<div class="max-w-7xl mx-auto px-8">
			<h2 class="text-4xl font-bold text-white mb-8">Áreas de Atuação</h2>
			{areas.length === 0 ? (
				<p class="text-slate-300">Nenhuma área de atuação cadastrada.</p>
			) : (
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					{areas.map((area: any) => (
						<div class="bg-slate-800/50 p-6 rounded-xl border border-slate-600">
							<h3 class="text-xl font-semibold text-white mb-3">{area.title}</h3>
							<p class="text-slate-300">{area.description}</p>
						</div>
					))}
				</div>
			)}
		</div>
	</section>

	<!-- Sobre Section -->
	<section id="sobre" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-8">
			<h2 class="text-4xl font-bold text-slate-800 mb-8">Sobre</h2>
			<div class="max-w-3xl">
				<p class="text-lg text-slate-600 mb-4">
					Paloma Santos é advogada inscrita na OAB/SP, com experiência em diversas áreas do Direito. 
					Atua com foco em proporcionar um atendimento humanizado e soluções jurídicas eficientes.
				</p>
				<p class="text-lg text-slate-600">
					Formada em Direito, busca constantemente atualização profissional para oferecer 
					o melhor serviço aos seus clientes.
				</p>
			</div>
		</div>
	</section>

	<!-- Contato Section -->
	<section id="contato" class="py-20 bg-slate-900 text-white">
		<div class="max-w-7xl mx-auto px-8">
			<h2 class="text-4xl font-bold mb-8">Contato</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<div>
					<p class="text-lg text-slate-300 mb-6">
						Entre em contato para agendar uma consulta ou tirar suas dúvidas.
					</p>
					<div class="space-y-4">
						<p class="flex items-center gap-3 text-slate-300">
							<span class="font-medium text-white">Email:</span> contato@palomasantos.adv.br
						</p>
						<p class="flex items-center gap-3 text-slate-300">
							<span class="font-medium text-white">Telefone:</span> (11) 99999-9999
						</p>
						<p class="flex items-center gap-3 text-slate-300">
							<span class="font-medium text-white">Endereço:</span> São Paulo, SP
						</p>
					</div>
				</div>
				<div class="bg-slate-800 p-8 rounded-xl">
					<h3 class="text-xl font-semibold mb-4">Horário de Atendimento</h3>
					<p class="text-slate-300">Segunda a Sexta: 9h às 18h</p>
					<p class="text-slate-300">Sábado: 9h às 12h (com agendamento)</p>
				</div>
			</div>
		</div>
	</section>
</Layout>
