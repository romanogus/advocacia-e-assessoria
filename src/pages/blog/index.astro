---
import { sanityClient } from 'sanity:client'
import Layout from '../../layouts/Layout.astro'

const posts = await sanityClient.fetch(
  `*[_type == "post"] | order(publishedAt desc) {
    _id,
    title,
    slug,
    excerpt,
    publishedAt
  }`
)
---

<Layout>
  <div class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-slate-800 mb-8">Blog</h1>
    
    {posts.length === 0 ? (
      <p class="text-slate-600">No posts yet.</p>
    ) : (
      <div class="flex flex-col gap-6">
        {posts.map((post: any) => (
          <a 
            href={`/blog/${post.slug.current}`} 
            class="block p-6 bg-white rounded-xl shadow-sm border border-slate-100 hover:shadow-md hover:border-slate-200 transition-all duration-200"
          >
            <h2 class="text-2xl font-semibold text-slate-800 mb-2">{post.title}</h2>
            
            {post.excerpt && (
              <p class="text-slate-600 mb-3">{post.excerpt}</p>
            )}
            
            {post.publishedAt && (
              <time class="text-sm text-slate-400">
                {new Date(post.publishedAt).toLocaleDateString('pt-BR')}
              </time>
            )}
          </a>
        ))}
      </div>
    )}
  </div>
</Layout>
